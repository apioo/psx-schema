{
  "definitions": {
    "Author": {
      "description": "An simple author element with some description",
      "type": "object",
      "properties": {
        "title": {
          "nullable": false,
          "type": "string"
        },
        "email": {
          "description": "We will send no spam to this address",
          "nullable": true,
          "type": "string"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "locations": {
          "description": "Array of locations",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Location"
          }
        },
        "origin": {
          "$ref": "#/definitions/Location"
        }
      },
      "required": [
        "title"
      ]
    },
    "Location": {
      "description": "Location of the person",
      "type": "object",
      "properties": {
        "lat": {
          "type": "number"
        },
        "long": {
          "type": "number"
        }
      }
    },
    "Meta": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "description": "An general news entry",
  "type": "object",
  "properties": {
    "config": {
      "$ref": "#/definitions/Meta"
    },
    "inlineConfig": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "mapTags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "mapReceiver": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Author"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "receiver": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Author"
      }
    },
    "data": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "number"
        }
      }
    },
    "read": {
      "type": "boolean"
    },
    "author": {
      "$ref": "#/definitions/Author"
    },
    "meta": {
      "$ref": "#/definitions/Meta"
    },
    "sendDate": {
      "type": "string",
      "format": "date"
    },
    "readDate": {
      "type": "string",
      "format": "date-time"
    },
    "price": {
      "deprecated": true,
      "type": "number"
    },
    "rating": {
      "type": "integer"
    },
    "content": {
      "description": "Contains the \"main\" content of the news entry",
      "nullable": false,
      "type": "string"
    },
    "question": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "default": "1.0"
    },
    "coffeeTime": {
      "type": "string",
      "format": "time"
    },
    "g-recaptcha-response": {
      "type": "string"
    },
    "media.fields": {
      "type": "string"
    },
    "payload": {}
  },
  "required": [
    "author",
    "content"
  ]
}